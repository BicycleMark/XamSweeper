<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
	xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:prism="http://prismlibrary.com"
    prism:ViewModelLocator.AutowireViewModel="True"
	xmlns:yummy="clr-namespace:Xamarin.Forms.PancakeView;assembly=Xamarin.Forms.PancakeView"
    xmlns:local="clr-namespace:Sweeper.Views;assembly=Sweeper"
    x:Class="Sweeper.Views.GamePage"
    
    Title="Game">
    <ContentPage.Resources>
        <ResourceDictionary>
            
        </ResourceDictionary>
    </ContentPage.Resources>


    <yummy:PancakeView BackgroundColor="DarkSeaGreen" CornerRadius="15" Padding="15">
	  <Grid RowDefinitions="*,8*">
        <yummy:PancakeView Grid.Row="0" Padding="0">
                <Grid ColumnDefinitions="*,*,*" >
                    <Frame Grid.Column="0">
                        <Label HorizontalOptions="Center" VerticalOptions="Center" Text="Binding"/>
                    </Frame>
                    <Frame Grid.Column="1">
                        <Button Text="Ok"></Button>

                    </Frame>
                    <Frame Grid.Column="2">
                        <Label HorizontalOptions="Center" VerticalOptions="Center" Text="Binding"/>
                    </Frame>

                </Grid>

            </yummy:PancakeView>
        <Frame Grid.Row="1">
            
        </Frame>  
      </Grid>
    </yummy:PancakeView>


</ContentPage>

