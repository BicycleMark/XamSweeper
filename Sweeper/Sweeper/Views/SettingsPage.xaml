<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
	xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:prism="http://prismlibrary.com"
    prism:ViewModelLocator.AutowireViewModel="True"
	xmlns:local="clr-namespace:Sweeper.Views;assembly=Sweeper"
    x:Class="Sweeper.Views.SettingsPage"
    Title="Settings">



	  <StackLayout VerticalOptions="Center" HorizontalOptions="Center">
        <Label Text="{Binding SettingsModel.Rows}"/>
        <Label Text="{Binding SettingsModel.Columns}"/>
        <Label Text="{Binding SettingsModel.MineCount}"/>
        <Picker ItemsSource="{Binding SettingsModel.ThemeNames}" VerticalOptions="Center" HorizontalOptions="Center" SelectedIndex="{Binding SettingsModel.CurrentThemeIndex}" />
        <Picker ItemsSource="{Binding SettingsModel.GameDefinitions}" ItemDisplayBinding="{Binding Name}" VerticalOptions="Center" HorizontalOptions="Center" SelectedIndex="{Binding SettingsModel.SelectedGameType}" />
        <Label Text="{Binding SettingsModel.CurrentThemeIndex}"/>
    </StackLayout>
        
    

</ContentPage>

